const puppeteer = require("puppeteer");

const scrollInfinitely = async (page, itemTargetCount) => {
  let items = []

  while (true) {
    const extractItem = await page.evaluate(()=>{
      const items = Array.from(document.querySelector('#boxes > div'))
      return items.map((item)=> item.innerText)

    })
    const previousHeight = await page.evaluate('document.body.scrollHeight');
    await page.evaluate('window.scrollTo(0, document.body.scrollHeight)');
    await page.waitForFunction(`document.body.scrollHeight > ${previousHeight}`);
    await new Promise((resolve) => setTimeout(resolve, 1000));
  }
};

(async () => {
  const browser = await puppeteer.launch({ headless: false });
  const page = await browser.newPage();
  await page.goto("https://intoli.com/blog/scrape-infinite-scroll/demo.html");
  await scrollInfinitely(page);
})();
